<form action="/medications/<%= @medication.id %>" method="post">
    <label for="medication">Medication</label>
    <input type="text" name="medication[name]" value="<%= @medication.name %>"/>

    <label for="class">Class</label>
    <input type="text" name="medication[class]" value="<%= @medication.class %>"/>

    <label for="indication">Indication</label>
    <input type="text" name="medication[indication]" value="<%= @medication.indication %>"/>

    <label for="dose">Dose</label>
    <input type="text" name="medication[dose]" value="<%= @medication.dose %>"/>

    <label for="frequency">Frequency</label>
    <input type="text" name="medication[frequency]" value="<%= @medication.frequency %>"/>

    <label for="instructions">Instructions</label>
    <input type="textarea" name="medication[instructions]" value="<%= @medication.instructions %>"/>

    <input type="submit" value="Submit">

</form>